#!/usr/bin/env bash
OS=$(uname -s)

function cross_install() {
  case $OS in
    Darwin)
      echo "brew install $@"
      ;;

    Linux)
      echo "pacman -S $@"
      ;;
  esac
}

function install_linux_only_packages() {
  printf "%s\n" "Installing Linux specific packages..."
  # Display Server Protocol
  cross_install wayland
  # Display Manager
  cross_install waybar wofi
  # WM & WM Ecosystem
  cross_install hyprland hyprlock hypridle hyprpaper hyprshot

}

function install_macos_only_packages() {
  printf "%s\n" "Installing MacOS specific packages..."
}

function install_os_agnostic_packages() {
  printf "%s\n" "Installing OS agnostic packages..."
}

[[ $OS -eq "Linux" ]] && install_linux_only_packages
[[ $OS -eq "Darwin" ]] && install_macos_only_packages
install_os_agnostic_packages

echo "Done!"
exit 0

# PLATFORM AGNOSTIC Software
# CRITICAL software
# IMPORTANT software
# PREFFERED software
# OPTIONAL software
